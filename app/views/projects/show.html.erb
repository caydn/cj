<p id="notice"><%= notice %></p>


<div class="full_project">
  <div class="container">
    <div class="row" >
      <div class="col-md-8 col-md-offset-2">
        <div class="back-btn">
            <i class="fa fa-angle-left"> <%= link_to 'Back', projects_path, class: "back" %></i>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <div class="project_show">
          <p>
            <h2><%= @project.title %> <small> | <%= @project.description %></small></h2>
          </p>

          <p>
            <%= image_tag(@project.image.full_size.url) %>
          </p>
          <p>
            <%= @project.summary %>
          </p>


          <%= link_to 'Edit', edit_project_path(@project) %>
        </div>
      </div>
    </div>
  </div>
</div>
