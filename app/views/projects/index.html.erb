

<!-- Portfolio -->


  <section id="portfolio" class="portfolio">
    <div class="container test2">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1 text-center">
              <p id="notice"><%= notice %></p>
                <div class="row">
                  <% @projects.each do |project| %>
                    <div class="col-md-4 col-sm-4">
                      <a class="links" href="<%=project_url(project) %>">
                        <div class="portfolio-item">
                          <%= image_tag(project.image.profile_size.url, class: "img-portfolio, img-responsive") %>
                          <div class="textbox">
                            <p class="text-content">
                              <span>
                                <%= project.title %>
                                <hr class="pro">
                                <!-- <br /> -->
                                <%= project.description %>
                                <!-- <br />
                                <%= link_to 'Show', project %>
                                <br>
                                <%= link_to 'Edit', edit_project_path(project) %>
                                <br>
                                <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %> -->
                              </span>
                            </p>
                          </div>
                        </div>
                      </a>
                    </div><!-- /.col-md-4 -->
                  <% end %>
            </div>
            <!-- /.row-->
            <div class="row">
              <div class="col-md-12">
                <% if user_signed_in? %>
                  <div id="admin_links" class="text-center">
                    <%= link_to 'New Project', new_project_path %>
                  </div>
                <% end %>
              </div>
            </div>
            <!-- row new project -->
        </div>
        <!-- /.col-lg-10 -->
      </div>
      <!-- row -->
    </div>
    <!-- /.container -->
    <!-- new post btn -->

  </section>
