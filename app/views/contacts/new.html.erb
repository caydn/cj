  <!-- Contact -->
<section id="contact_form" class="portfolio">
    <div class="container test2">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
              
                <%= form_for @contact do |f| %>

                <div class="row names">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :firstname, class: "control-label" %>
                      <%= f.text_field :firstname, class: "form-control", id: "firstname", required: true %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :lastname, class: "control-label" %>
                      <%= f.text_field :lastname, class: "form-control", id: "lastname", required: true %>
                    </div>
                  </div>
                </div><!-- end name row-->
                <div class="row email">
                  <div class="col-md-12">
                    <div class="form-group">
                      <%= f.label :email, class: "control-label" %>
                      <%= f.email_field :email, class: "form-control", id: "email", required: true %>
                      <p class="help-block">I will keep it secret and protected</p>
                    </div>
                  </div>
                </div><!-- end email row -->
                <div class="row message">
                  <div class="col-md-12">
                    <div class="form-group">
                      <%= f.label :message, class: "control-label" %>
                      <%= f.text_area :message, as: :text, class: "form-control", id: "message", required: true %>
                      <p class="help-block">Say hello or Tell me how I can help you!</p>
                    </div>
                  </div>
                </div><!-- end email row -->

                    <div class="form-group">
                      <div class="hidden">
                        <%= f.label :nickname %>
                        <%= f.text_field :nickname, hint: 'leave this field blank' %>
                      </div>
                    </div>
                  <!-- end captcha -->
                <div class="form-group">
                  <div class="col-sm-4 col-sm-offset-4">
                    <%= f.submit "Submit", class: "button btn-md btn-default form-control", id: "submit" %>
                  </div>
                </div>

                <% end %>
              <!-- end contact form -->
            </div>
            <!-- /.col-lg-10 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</section>
